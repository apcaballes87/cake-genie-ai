{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "app/**/*",
    "components/**/*",
    "contexts/**/*",
    "hooks/**/*",
    "lib/**/*",
    "services/**/*",
    "constants.ts",
    "config.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "supabase/functions",
    "supabase/.temp",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}